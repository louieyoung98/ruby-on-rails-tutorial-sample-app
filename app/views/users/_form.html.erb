<%= form_with(model: @user, local: true) do |field| %>
  <div class="col-12">
    <%= render "shared/error_messages" %>
  </div>

  <div class="col-6">
    <%= field.label :first_name, class: "form-label" %>
    <%= field.text_field :first_name, class: "form-control" %>
  </div>

  <div class="col-6">
    <%= field.label :last_name, class: "form-label" %>
    <%= field.text_field :last_name, class: "form-control" %>
  </div>

  <div class="col-6">
    <%= field.label :email, class: "form-label" %>
    <%= field.text_field :email, class: "form-control" %>
  </div>

  <div class="col-6">
    <%= field.label :phone_number, class: "form-label" %>
    <%= field.text_field :phone_number, class: "form-control" %>
  </div>

  <div class="col-12">
    <%= field.label :username, class: "form-label" %>
    <%= field.text_field :username, class: "form-control" %>
  </div>

  <div class="col-6">
    <%= field.label :password, class: "form-label" %>
    <%= field.password_field :password, class: "form-control" %>
  </div>

  <div class="col-6">
    <%= field.label :password_confirmation, label: "Confirmation" , class: "form-label" %>
    <%= field.password_field :password_confirmation, class: "form-control" %>
  </div>
<% end %>
