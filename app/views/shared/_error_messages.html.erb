<% if @user.present? %>
  <% if @user.errors.any? %>
    <% errors = @user.errors.full_messages.uniq.sort %>
    <div id="error_explanation">
      <div class="alert alert-danger">
        The form contains <%= pluralize(errors.count, "error") %>.
      </div>
      <ul>
        <% errors.each do |msg| %>
          <li>
            <%= msg %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
<% end %>
